{
  "compilerOptions": {
    "mapRoot": "./source/",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    //"outFile": "./build/build.js",
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./source",
    "sourceMap": true,
    "sourceRoot": "./source",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  }
}
